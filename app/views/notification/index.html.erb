<div class ="container">
	<div class ="row">
		<div class ="notification col-xs-12 col-lg-offset-2 col-lg-8">
			<h3 class="text-center">通知</h3>
    			<%= link_to "通知削除", users_notification_path(@notifications), method: :delete ,class: "col-xs-12 fas fa-trash" %>
    				<% if @notifications.exists? %>
    					<div class="notification-index col-xs-12">
       						<%= render @notifications %>
    					</div>
					<% else %>
   						 <p>通知はありません</p>
				<% end %>
		</div>
	</div>
</div>