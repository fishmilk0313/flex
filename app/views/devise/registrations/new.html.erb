<div class="container">
  <div class="row">
    <div class ="login-form col-lg-offset-4 col-lg-4 col-xs-offset-3 col-xs-6">
      <i class="fas fa-user fa-5x">SIGNUP</i>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.text_field :name,autofocus: true, autocomplete: "name",placeholder: "UserName",size:50 %>
          </div>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email",size:50 %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password",placeholder: "PASSWORD",size:50 %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder: "PASS確認",size:50%>
          </div>

          <div class="actions">
            <%= f.submit "Sign up",class: "btn btn-success btn-block" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
