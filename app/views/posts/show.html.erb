<div class ="container">
	<div class="row">
		<div class="post-show-fream col-xs-offset-2 col-xs-8">
			
			<div class="col-xs-12">
				<div class="col-xs-4">
					<%= attachment_image_tag(@post.user, :profile_image, fallback: "no-image-user.png", class: "profile-image", style: "width: 50px; height: 50px;") %>
				</div>
				<div class="col-xs-4 text-left">
					<%= @post.user.name %>
				</div>

				<div class="col-xs-4">
					<%= @post.created_at %>
				</div>

			</div>

			<div class="post-show-text col-xs-12">
					<p><%= simple_format(@post.text.gsub!(/[#＃][\w\p{Han}ぁ-ヶｦ-ﾟー]+/, "")) %></p>
			        <!--4.tweetにタグがあればタグを出力する-->
			        <% if @post.hashtags.any? %>
			        	<% @post.hashtags.each do |hashtag| %>
			        		<p>#<%= hashtag.hashname %></p>
			        	<% end %>
			        <% end %>
			</div>

			<div class="post-show-image-fream col-xs-12">
			    <%= attachment_image_tag(@post, :image, fallback: "no-image.png", class: "post-show-image") %>
			</div>

		</div>
	</div>
</div>



