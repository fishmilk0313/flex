<table class="table table-hover">
	<thead>
		<tr>
		<th></th>
		<th>Name</th>
	    <th>follower</th>
		<th>following</th>
		</tr>
	</thead>
	<tbody>
		<% user.each do |user| %>
			<tr>
				<td>
					<%= attachment_image_tag user, :profile_image, style: "width:60px; heigth: 60px;", fallback: "no-image.png", class: "profile-image" %>
				</td>
				<td>
					<%= link_to  users_user_path(user) do %>
						<%= user.name%>
					<% end %>
				</td>
				<td>
					<%= link_to followers_users_user_path(user) do%>
						<%= user.followers.count %>
					<% end %>
				</td>
				<td>
					<%= link_to following_users_user_path(user) do%>
						<%= user.followings.count %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>