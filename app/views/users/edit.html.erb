<div class="container">
	<div class="row">
		<div class="user-edit-fream col-xs-offset-2 col-xs-8">
			<h4>登録内容編集</h4>
			<%= form_for(@user) do |f| %>
			<div class="col-xs-12">
				<div class="col-xs-4">
					<%= attachment_image_tag(@user,:profile_image, fallback: "no-image-user.png", class: "profile-image edit-user") %><br>
					<%= f.attachment_field :profile_image, placeholder: "プロフィール" %>
				</div>

				<div class="col-xs-8">
					<%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "name", style: "width: 100%" %>
				</div>

				<div class="col-xs-12">
					<%= f.text_area :introduction, class: "form-control", placeholder: "自己紹介" %><br>
					 <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
				</div>
			</div>
			<% end %>

		</div>
	</div>
</div>

<script>
$(function(){
    // inputのidから情報の取得
    $('#user_profile_image').on('change', function (e) {
// ここから既存の画像のurlの取得
    var reader = new FileReader();
    reader.onload = function (e) {
        $(".profile_image").attr('src', e.target.result);
    }
// ここまで
    reader.readAsDataURL(e.target.files[0]); //取得したurlにアップロード画像のurlを挿入
});
});

</script>
